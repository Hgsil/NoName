<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#faf8f9">
    <android.support.v4.view.ViewPager
        android:id="@+id/loginandcreate_viewpager"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        >

    </android.support.v4.view.ViewPager>


    <ImageView
        android:id="@+id/loginandcreate_tab_circle2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/loginandcreate_viewpager"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/tab_circle_notouch"/>
    <ImageView
        android:id="@+id/loginandcreate_tab_circle1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/loginandcreate_viewpager"
        android:layout_toLeftOf="@+id/loginandcreate_tab_circle2"
        android:background="@mipmap/tab_circle_touch"/>
    <ImageView
        android:id="@+id/loginandcreate_tab_circle3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@+id/loginandcreate_viewpager"
        android:layout_toRightOf="@+id/loginandcreate_tab_circle2"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/tab_circle_notouch"/>


    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loginandcreate_create_cardview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/loginandcreate_tab_circle2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        app:cardBackgroundColor="#7f8595"
        >
        <TextView
            android:id="@+id/loginandcreate_create_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/create"
            android:textColor="#faf8f9"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loginandcreate_login_cardview"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/loginandcreate_tab_circle2"
        android:layout_toRightOf="@+id/loginandcreate_create_cardview"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:cardBackgroundColor="#4da3f6"
        >
        <TextView
            android:id="@+id/loginandcreate_login_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/login"
            android:textColor="#faf8f9"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>